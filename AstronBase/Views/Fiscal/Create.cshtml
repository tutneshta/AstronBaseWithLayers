@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AstronBase.Domain.Entity.Fiscal

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Fiscal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SerialNumber" class="control-label"></label>
                <input asp-for="SerialNumber" class="form-control" />
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Company.Name"> </label>
                @Html.DropDownListFor(model => model.CompanyId, ViewBag.Company as SelectList)
            </div>
            <div>
                <label asp-for="Model.Name"> </label>
                @Html.DropDownListFor(model => model.ModelId, ViewBag.ModeIdl as SelectList)
            </div>  
            <div>
                <label asp-for="StatusFiscal.Name"> </label>
                @Html.DropDownListFor(model => model.StatusFiscalId, ViewBag.StatusFiscalId as SelectList)
            </div> 
            <div>
                <label asp-for="Store.Name"> </label>
                @Html.DropDownListFor(model => model.StoreId, ViewBag.StoreId as SelectList)
            </div> 
            <div>
                <label asp-for="RegisterState.Name"> </label>
                @Html.DropDownListFor(model => model.RegisterStateId, ViewBag.RegisterStateId as SelectList)
            </div> 
            <div>
                <label asp-for="Engineer.LastName"> </label>
                @Html.DropDownListFor(model => model.EngineerId, ViewBag.EngineerId as SelectList)
            </div>

            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
