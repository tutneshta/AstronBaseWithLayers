<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AstronBase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AstronBase.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="css/main-page.css"/>
</head>
<body>
  
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Company" asp-action="Index">AstronBase</a>
            <a class="navbar-brand" asp-area="" asp-controller="Request" asp-action="Index">Заявки</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <div class="dropdown">
                        <button class="dropbtn">Справочник</button>
                        <div class="dropdown-content">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Company" asp-action="Index">Организации</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Store" asp-action="index">Магазины</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Client" asp-action="index">Клиенты</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Fiscal" asp-action="index">Фискальные регистраторы</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Engineer" asp-action="index">Инженеры</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Model" asp-action="index">Модели ФР</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="StatusBlank" asp-action="index">Статусы бланков</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="StatusFiscal" asp-action="index">Статусы ФР</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="StatusRequest" asp-action="index">Статусы заявок</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="RegisterState" asp-action="index">Реестр ФР</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="TypeRequest" asp-action="index">Тип заявки</a>
                    
                        </div>
                 
                    </div>
                    <div >
                        @if(User.Identity.IsAuthenticated)
                        {
                            <p>@User.Identity.Name</p>
 
                            <form method="post" asp-controller="Account" asp-action="Logout">
                                <input type="submit" value="Выход" />
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login">Вход</a>
                            <a asp-controller="Account" asp-action="Register">Регистрация</a>
                        }
                    </div>
                </ul>
            </div>
        </div>
    </nav>
 
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - AstronLTD - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
