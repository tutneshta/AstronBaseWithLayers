@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AstronBase.Domain.Entity.Request

@{
    ViewData["Title"] = "Create";
}

<h1>Создание заявки</h1>

<h4>Заявка</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control"/>
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div>
                @Html.DropDownListFor(model => model.CompanyId , ViewBag.CompanyId as SelectList)
            </div> 
            <div>
                @Html.DropDownListFor(model => model.StoreId , ViewBag.StoreId as SelectList)
            </div> 
            <div>
                @Html.DropDownListFor(model => model.ClientId , ViewBag.ClientId as SelectList)
            </div> 
            <div>
                @Html.DropDownListFor(model => model.FiscalId , ViewBag.FiscalId as SelectList)
            </div>

            <div class="form-group">
                <label asp-for="NumberPos" class="control-label"></label>
                <input asp-for="NumberPos" class="form-control" value="model.CompanyId"/>
                <span asp-validation-for="NumberPos" class="text-danger"></span>
            </div>
            <div>
                @Html.DropDownListFor(model => model.EngineerId , ViewBag.EngineerId as SelectList)
            </div>
            <div class="form-group">
                <label asp-for="ReasonPetition" class="control-label"></label>
                <input asp-for="ReasonPetition" class="form-control" />
                <span asp-validation-for="ReasonPetition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Works" class="control-label"></label>
                <input asp-for="Works" class="form-control" />
                <span asp-validation-for="Works" class="text-danger"></span>
            </div>
            <div>
                @Html.DropDownListFor(model => model.StatusRequestId , ViewBag.StatusRequestId as SelectList)
            </div>
            <div>
                @Html.DropDownListFor(model => model.TypeRequestId , ViewBag.TypeRequestId as SelectList)
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
